#This IAM policy allows full access to the bucket for members of the group:
{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "AllowGroupAccessToBucket",
			"Effect": "Allow",
			"Action": "s3:*",
			"Resource": [
				"arn:aws:s3:::mahin.demo.bucket",
				"arn:aws:s3:::mahin.demo.bucket/*"
			]
		}
	]
}
